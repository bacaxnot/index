{
  "name": "@bxn/database",
  "version": "0.0.0",
  "private": true,
  "type": "module",
  "main": "src/index.ts",
  "exports": {
    "./*": "./src/*"
  },
  "scripts": {
    "db:pull": "drizzle-kit introspect:pg",
    "db:migrations": "drizzle-kit generate:pg",
    "db:push": "tsx -r dotenv/config src/migrate.ts",
    "db:drop": "drizzle-kit drop",
    "db:ui": "drizzle-kit studio"
  },
  "dependencies": {
    "dotenv": "^16.4.5",
    "drizzle-orm": "^0.29.4",
    "drizzle-zod": "^0.5.1",
    "pg": "^8.11.3",
    "postgres": "^3.4.3",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@bxn/tsconfig": "workspace:*",
    "@types/node": "^20.10.6",
    "drizzle-kit": "^0.20.14",
    "tsx": "^4.7.1",
    "typescript": "^5.3.3"
  }
}